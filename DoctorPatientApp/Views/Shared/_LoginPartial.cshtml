@inject SignInManager<Users> signInManager;

<ul class="navbar-nav ms-auto align-items-center">
	@if (signInManager.IsSignedIn(User))
	{
		<form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
			@Html.AntiForgeryToken()
			<button type="submit" class="btn btn-link nav-link text-dark p-0">Logout</button>
		</form>
	}
	else
	{
		<a class="nav-link me-3 text-dark" asp-controller="Account" asp-action="Login">
			Login
		</a>
		<a class="nav-link me-3 text-dark" asp-controller="Account" asp-action="Register">
			Register
		</a>
	}
</ul>